<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/article_reading_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/textSecondary"
            app:strokeWidth="0.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <!-- App Icon -->
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/unclos1"
                    android:contentDescription="App Logo"
                    android:layout_marginBottom="16dp" />

                <!-- App Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNCLOS GO"
                    android:textSize="24sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold" />

                <!-- Version -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0.6"
                    android:textSize="14sp"
                    android:textColor="#979595"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Development Team Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_people"
                        app:tint="@color/textSecondary"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Team icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Development Team"
                        android:textSize="20sp"
                        android:textColor="@color/textSecondary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Team Member 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohammed Tanvirul Islam"
                        android:textSize="17sp"
                        android:textColor="@color/textSecondary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full-Stack Developer"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Core functionality, architecture, feature development"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textSecondary"
                    android:layout_marginBottom="16dp" />

                <!-- Team Member 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/attin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lt Cdr Hasan Al Ashraf, BN"
                        android:textSize="17sp"
                        android:textColor="@color/textSecondary"
                        android:textStyle="bold"
                        android:foreground="?attr/selectableItemBackground" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Manager &amp; UI/UX Designer"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UI design and visual consistency"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Contact Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cu"
                        app:tint="@color/textSecondary"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Contact icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="18sp"
                        android:textColor="@color/textSecondary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Email 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_email"
                        app:tint="@color/textSecondary"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Email icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:text="1tanvirtouhid@gmail.com"
                        android:textColorLink="#2F6FAB"
                        android:textSize="14sp"
                        android:linksClickable="true"/>
                </LinearLayout>

                <!-- Email 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_email"
                        app:tint="@color/textSecondary"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Email icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:text="aborshon@gmail.com"
                        android:textColorLink="#2F6FAB"
                        android:textSize="14sp"
                        android:linksClickable="true"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Copyright Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© 2025 UNCLOS GO. All rights reserved."
            android:textSize="12sp"
            android:textColor="#979595"
            android:gravity="center"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>